<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PSR-12 Standard" namespace="/">
    <description>The PSR-12 coding standard with included directory list</description>

    <!-- Include the whole PSR-12 standard -->
    <rule ref="PSR12"/>

    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>tests</exclude-pattern>
    </rule>

    <!-- Directories to be checked -->
    <file>app</file>
    <file>routes</file>
    <file>tests</file>

    <!-- Line arguments -->
    <arg name="colors"/>
    <arg value="sp"/>
</ruleset>
